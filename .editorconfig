root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
quote_type = auto

[{*.sh}]
binary_next_line = true
switch_case_indent = true

[{*.md,*.markdown}]
trim_trailing_whitespace = false
